      package="com.bairuitech.demo"
      android:versionCode="2"
      android:versionName="2.0">
      
        <uses-sdk
      		  android:minSdkVersion="11"
      		  android:targetSdkVersion="19"
     		   />
        
            
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
